---
const { url, type = "btn btn-rounded btn-neutral" } = Astro.props;
---

<a
	href={url}
	target="_blank"
	rel="noopener noreferrer"
	class={type}
	aria-label={Astro.props.ariaLabel}
	role="link"
	title={Astro.props.title}
>
	<slot name="before" class={Astro.props.class} />
	<slot />
	<slot name="after" />
</a>

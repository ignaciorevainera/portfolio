---
import Section from "@/Section.astro";
import BentoElement from "@/elements/BentoElement.astro";
import Info from "@/elements/Info.astro";

import { education } from "keys.json";
---

<Section title="EducaciÃ³n" id="education">
	{
		education.map(({ degree, place, date, description, tags }) => {
			return (
				<BentoElement>
					<Info position={degree} place={place} date={date}>
						<p>{description}</p>
						<footer slot="footer-tags" class="tag-btn-container">
